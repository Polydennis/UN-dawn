{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .cart-upsell__heading {
    margin-bottom: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign has_tapete = false
  assign has_accessory = false

  for item in cart.items
    assign product_type = item.product.type | downcase
    if product_type == 'home tapete' or product_type == 'kindertapete'
      assign has_tapete = true
    endif
    if product_type == 'tapetenzubehör'
      assign has_accessory = true
    endif
  endfor

  assign upsell_collection = collections['tapetenzubehor']
-%}

{%- if cart != empty and has_tapete and has_accessory == false and upsell_collection != blank and upsell_collection.products_count > 0 -%}
  <section class="cart-upsell color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
    <div class="page-width">
      <h2 class="title h3 cart-upsell__heading">{{ section.settings.heading }}</h2>
      <ul class="grid product-grid grid--3-col-desktop grid--3-col-tablet-down" role="list">
        {% assign skip_card_product_styles = false %}
        {%- for product in upsell_collection.products limit: 3 -%}
          <li class="grid__item">
            {% render 'card-product',
              card_product: product,
              show_vendor: false,
              show_rating: false,
              quick_add: 'standard',
              section_id: section.id,
              skip_styles: skip_card_product_styles
            %}
          </li>
          {%- assign skip_card_product_styles = true -%}
        {%- endfor -%}
      </ul>
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "Cart Upsell Zubehör",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Passendes Zubehör"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Cart Upsell Zubehör"
    }
  ]
}
{% endschema %}
